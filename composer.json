{
  "name": "php-actions/example-phpunit",
  "description": "Example project using php-actions/phpunit",

  "require-dev": {
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-sqlite3": "*",
    "phpunit/phpunit": "9.*"
  },
  "scripts": {
    "phpcs": "phpcs $(git diff-tree --no-commit-id --name-only -r `git log --format=\"%H\" -n 1` | grep .php)"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "test"
    }
  }
}